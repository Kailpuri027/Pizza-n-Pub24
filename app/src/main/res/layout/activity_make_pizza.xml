<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="capstone.conestoga.pizzanpub24.MakePizzaActivity"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Crust"
        android:gravity="center_vertical"
        android:id="@+id/label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_toRightOf="@+id/label"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:prompt="@string/spinner_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Size"
        android:id="@+id/label1"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/label"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radiogroup"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/label"
        android:layout_toEndOf="@+id/label1"
        android:layout_toRightOf="@+id/label1">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small"
            android:id="@+id/size_s"
            android:layout_marginLeft="10dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/size_s"
            android:id="@+id/size_m" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/size_s"
            android:id="@+id/size_l" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X Large"
            android:id="@+id/size_xl"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/size_s"
            android:layout_toRightOf="@+id/size_l"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meats"
        android:id="@+id/label2"
        android:layout_below="@+id/radiogroup"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center_vertical" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/toppings_list"
        android:layout_below="@+id/label2"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Additional Descritpion"
        android:layout_marginTop="10dp"
        android:id="@+id/label3"
        android:layout_below="@+id/toppings_list"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center_vertical" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/label3"
        android:inputType="textMultiLine"
        android:ems="15"
        android:id="@+id/additional" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:layout_below="@+id/additional"
        android:layout_centerHorizontal="true"
        android:src="@drawable/makepizza"
        android:onClick="payment"/>

</RelativeLayout>
